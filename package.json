{
  "name": "wa-auth-store",
  "version": "0.2.1",
  "description": "Manage and synchronize WhatsApp Baileys credentials between Redis and a persistent database",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mo1000/wa-auth-store.git"
  },
  "author": "Amos Landry",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "ts-node-dev --esm --respawn src/index.ts",
    "build": "tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "redis",
    "baileys",
    "whatsapp",
    "credentials",
    "cache",
    "database",
    "sync",
    "authentication",
    "mikro-orm"
  ],
  "dependencies": {
    "ioredis": "^5.3.0",
    "@mikro-orm/core": "^6.5.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@whiskeysockets/baileys": "^6.0.0 || ^7.0.0"
  },
  "peerDependenciesMeta": {
    "@whiskeysockets/baileys": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@mikro-orm/postgresql": "^6.5.8",
    "@mikro-orm/mysql": "^6.5.8",
    "@mikro-orm/sqlite": "^6.5.8"
  }
}
